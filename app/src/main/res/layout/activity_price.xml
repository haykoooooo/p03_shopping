<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="@dimen/_132sdp"
    tools:context="com.haykabelyan.shopping_calculator.UpdateActivity">

    <EditText
        android:id="@+id/editTextp"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="4"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="7"
        android:textAlignment="center"
        android:textSize="@dimen/_16sdp" />

    <Button
        android:id="@+id/oKButton"
        style="@style/BigButtonStyle"
        android:layout_width="@dimen/_72sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/editTextp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="  OK  "
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:id="@+id/textViewp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_above="@+id/editTextp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_9sdp"
        android:text="Enter the sum"
        android:textSize="@dimen/_16sdp" />
</RelativeLayout>